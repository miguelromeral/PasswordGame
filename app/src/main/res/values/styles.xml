<resources>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/baloobhaina2_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="backgroundStyle">
        <item name="android:background">@color/white</item>
    </style>


    <style name="IconTheme">
        <item name="android:tint">@color/colorAccent</item>
    </style>
    <style name="IconThemeOpposite">
        <item name="android:tint">@color/white</item>
    </style>


    <style name="MainButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:backgroundTint">@color/mainOrange</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainButtonRounded" parent="MainButton">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:fontFamily">@font/bangers</item>
        <item name="android:textSize">16dp</item>
    </style>



    <style name="SuccessButton" parent="MainButtonRounded">
        <item name="android:backgroundTint">@color/lightGreen</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FailButton" parent="MainButtonRounded">
        <item name="android:backgroundTint">@color/lightRed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MinorButton" parent="MainButtonRounded">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mainTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myTextView" parent="mainTextView">
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="textViewInCardView" parent="mainTextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewHint" parent="mainTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewPassword" parent="mainTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:fontFamily">@font/bangers</item>
    </style>

    <style name="tvTimer" parent="mainTextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/mainOrange</item>
        <item name="android:fontFamily">@font/bangers</item>
    </style>

    <style name="tvScoreFail" parent="mainTextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/lightRed</item>
        <item name="android:fontFamily">@font/bangers</item>
    </style>

    <style name="tvScoreSuccess" parent="mainTextView">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">28sp</item>>
        <item name="android:fontFamily">@font/bangers</item>
    </style>


    <style name="mainCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8sp</item>
    </style>


    <style name="cardViewCustomPassword" parent="mainCardView">
        <item name="cardBackgroundColor">@color/mainBlue</item>
    </style>

    <style name="cardViewCustomHint" parent="mainCardView">
        <item name="cardBackgroundColor">@color/mainBlue</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="cardViewHint" parent="mainCardView">
        <item name="cardBackgroundColor">@color/mainOrange</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
