<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_night</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/almost_black</item>
        <item name="colorAccent">@color/lightBlue</item>
        <item name="android:navigationBarColor">@color/almost_black</item>
        <item name="android:fontFamily">@font/baloobhaina2_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="backgroundStyle">
        <item name="android:background">@color/black</item>
    </style>


    <style name="IconTheme">
        <item name="android:tint">@color/lightBlue</item>
    </style>
    <style name="IconThemeOpposite">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="cardViewCustomPassword" parent="mainCardView">
        <item name="cardBackgroundColor">@color/darkBlue</item>
    </style>

    <style name="cardViewHint" parent="mainCardView">
        <item name="cardBackgroundColor">@color/darkOrange</item>
    </style>

    <style name="MiniIconTheme" parent="MiniIconThemeBase">
        <item name="android:tint">@color/white</item>
        <item name="layout_constraintBottom_toBottomOf"></item>
        <item name="layout_constraintStart_toStartOf"></item>
        <item name="layout_constraintTop_toTopOf"></item>
    </style>

    <style name="MainButton" parent="MainButtonBase">
        <item name="android:backgroundTint">@color/darkOrange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SuccessButton" parent="MainButtonRounded">
        <item name="android:backgroundTint">@color/darkGreen</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FailButton" parent="MainButtonRounded">
        <item name="android:backgroundTint">@color/darkRed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MinorButton" parent="MainButtonRounded">
        <item name="android:backgroundTint">@color/darkBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mainTextView" parent="mainTextViewBase">
        <item name="android:textColor">@color/lightBlue</item>
    </style>

    <style name="textViewPassword" parent="textViewPasswordBase">
        <item name="android:textColor">@color/lightBlue</item>
    </style>


    <style name="BottomNavigation">
        <item name="android:background">@color/almost_black</item>
        <item name="itemBackground">@drawable/navigation_bar_item_bg_night</item>
        <item name="itemIconTint">@color/lightBlue</item>
        <item name="itemTextColor">@color/lightBlue</item>
        <item name="paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
    </style>

</resources>