<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_night</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:fontFamily">@font/baloobhaina2_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="backgroundStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="IconThemeOpposite">
        <item name="android:tint">@color/black</item>
    </style>



    <style name="MainButtonRounded" parent="MainButton">
        <item name="android:backgroundTint">@color/darkOrange</item>
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:fontFamily">@font/bangers</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MinorButton" parent="MainButton">
        <item name="android:backgroundTint">@color/darkBlue</item>
        <item name="android:fontFamily">@font/bangers</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_rounded</item>
    </style>

    <style name="myTextView" parent="mainTextView">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="textViewHint" parent="mainTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewPassword" parent="mainTextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:fontFamily">@font/bangers</item>
    </style>



    <style name="textViewInCardView" parent="mainTextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cardViewCustomPassword" parent="mainCardView">
        <item name="cardBackgroundColor">@color/darkBlue</item>
    </style>

    <style name="cardViewCustomHint" parent="mainCardView">
        <item name="cardBackgroundColor">@color/darkBlue</item>
    </style>

    <style name="cardViewHint" parent="mainCardView">
        <item name="cardBackgroundColor">@color/darkOrange</item>
    </style>

</resources>