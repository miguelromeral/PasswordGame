<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_microphone_header_title">

        <CheckBoxPreference
            android:key="@string/pref_microphone_key"
            android:title="@string/pref_microphone_title"
            android:summary="@string/pref_microphone_summary"
            android:icon="@drawable/microphone"
            android:defaultValue="true"/>

    </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/pref_game_header_title">

        <DropDownPreference
            android:key="@string/pref_words_source_key"
            android:title="@string/pref_words_source_title"
            android:entries="@array/pref_words_source_entries"
            android:summary="@string/pref_words_source_summary"
            android:entryValues="@array/pref_words_source_values"/>


        <DropDownPreference
            android:key="@string/pref_language_key"
            android:title="@string/pref_language_title"
            android:summary="@string/pref_language_summary"
            android:entries="@array/pref_language_entries"
            android:entryValues="@array/pref_language_values"
            android:icon="@drawable/language"/>

    </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/pref_display_header_title">

        <CheckBoxPreference
            android:key="@string/pref_theme_key"
            android:title="@string/pref_theme_title"
            android:summary="@string/pref_theme_summary"
            android:defaultValue="false"/>

    </PreferenceCategory>




    <PreferenceCategory
        android:title="@string/pref_about_header_title">

        <Preference
            app:key="@string/pref_github_key"
            app:title="@string/pref_github_title"
            app:summary="@string/pref_github_summary"/>

    </PreferenceCategory>

</PreferenceScreen>
